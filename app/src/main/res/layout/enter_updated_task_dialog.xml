<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="110dp">
    <TextView
        android:id="@+id/enter_updated_task_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="77dp"
        android:layout_marginStart="12dp"
        android:text="hello"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/enter_updated_task"
        android:background="@drawable/add_task_background22"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:hint="Enter updated task"
        android:textColorHint="@color/default_gray"
        android:textSize="20dp"
        android:paddingStart="12dp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:paddingEnd="34dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/edit_task_button_save"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add_task_background22222"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/baseline_arrow_downward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />





</androidx.constraintlayout.widget.ConstraintLayout>