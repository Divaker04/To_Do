<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="120dp">
    <TextView
        android:id="@+id/delete_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Alarm"
        android:textSize="28dp"
        android:textColor="#ED3A3A"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/alert_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#018786"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="70dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/alert_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#018786"
        android:text="No"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/alert_ok_button"
        app:layout_constraintBottom_toBottomOf="@id/alert_ok_button"
        app:layout_constraintEnd_toStartOf="@id/alert_ok_button"
        android:layout_marginEnd="60dp"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>