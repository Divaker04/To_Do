<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="110dp">
    <TextView
        android:id="@+id/delete_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure edit your task?"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/edit_task_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#018786"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="80dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_task_no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="No"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@+id/edit_task_yes_button"
        app:layout_constraintBottom_toBottomOf="@id/edit_task_yes_button"
        app:layout_constraintEnd_toStartOf="@id/edit_task_yes_button"
        android:layout_marginEnd="40dp"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>