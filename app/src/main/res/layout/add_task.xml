<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="90dp">

        <EditText
            android:id="@+id/new_task"
            android:inputType="textCapWords"
            android:layout_width="270dp"
            android:layout_height="42dp"
            android:hint="Add new task"
            android:paddingStart="12dp"
            android:layout_marginStart="13dp"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="22dp"
            android:background="@drawable/add_task_background22"
            android:textColorHint="@color/default_gray"/>
        <ImageView
            android:id="@+id/save"
            android:layout_width="36dp"
            android:layout_height="36dp"
           app:layout_constraintStart_toEndOf="@id/new_task"
            app:layout_constraintTop_toTopOf="@id/new_task"
            app:layout_constraintBottom_toBottomOf="@id/new_task"
            android:layout_marginStart="14dp"
            android:background="@drawable/add_task_background22222"
         android:src="@drawable/baseline_arrow_upward_24"
             />




</androidx.constraintlayout.widget.ConstraintLayout>