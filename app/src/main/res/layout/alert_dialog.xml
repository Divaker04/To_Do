<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="150dp">
    <TextView
       android:id="@+id/delete_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/delete_set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"

        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alert_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="70dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/alert_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Cancel"

        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/alert_ok_button"
        app:layout_constraintBottom_toBottomOf="@id/alert_ok_button"
        app:layout_constraintEnd_toStartOf="@id/alert_ok_button"
        android:layout_marginEnd="60dp"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>